<body class="loginBackground">

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="loginBox">


      <h2>Log in</h2>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
                <div class="form-group loginDetails">
            <%= f.label :name %><br/>
            <%= f.text_field :name, autofocus: true, class: "form-control", require: true%>
          </div>
          <div class="form-group loginDetails">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, class: "form-control", require: true%>
          </div>

          <div class="form-group loginDetails">
            <%= f.label :message %>
            <%= f.text_area :message, autocomplete: "off", class: "form-control", require: true %>
          </div>

          <div class="form-group">
            <%= f.submit "Send message", class: "btn btn-primary" %>
          </div>
      <% end %>


    </div>
  </div>
  <div class="col-md-4"></div>
</div>


</body>